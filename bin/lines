#!/usr/bin/env -S deno run --allow-read

const [file] = Deno.args

if (!file) {
  throw new Error('No file received, specify file E.G.: `lines example.txt`')
}

const newLine = `\n`
const contents = await Deno.readTextFile(file)

console.log(
  contents
    .split(newLine)
    .map((line) => line.trim())
    .filter(Boolean).length,
)
