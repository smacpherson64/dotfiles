#!/usr/bin/env zsh
set -e

#
#
#

source "$DOTFILES/functions/help.sh"

DESCRIPTION="Converts a movie to a gif"

USAGE=$(cat <<EOF
Usage: @gif movie

Options:
  -h, --help            Show this help message
  --description         Show descriptive summary

  <movie>               The .mov file to render as a gif

Example:
  @gif ./toaster.mov

EOF
)


applyHelp "$DESCRIPTION" "$USAGE" "has required arguments" "$@"

#
#
#

file=$1
width=$(ffprobe -v quiet -print_format json -show_streams "$1" | jq -r '.streams[0].width')
ffmpeg -i "$1" -filter_complex "[0:v] fps=10,scale=$width:-1,split [a][b];[a] palettegen [p];[b][p] paletteuse" "$1.gif"
